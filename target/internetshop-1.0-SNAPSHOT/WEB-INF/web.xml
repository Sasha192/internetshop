<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.ishop.controller.servlet.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/servlet/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>mate.academy.ishop.controller.servlet.GetAllUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>users</servlet-name>
        <url-pattern>/servlet/users</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>mate.academy.ishop.controller.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>items</servlet-name>
        <servlet-class>mate.academy.ishop.controller.servlet.ItemsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>items</servlet-name>
        <url-pattern>/servlet/items</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addItems</servlet-name>
        <servlet-class>mate.academy.ishop.controller.servlet.AddItemsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addItems</servlet-name>
        <url-pattern>/servlet/items/additems/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>user_bucket</servlet-name>
        <servlet-class>mate.academy.ishop.controller.servlet.BucketController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user_bucket</servlet-name>
        <url-pattern>/servlet/user/bucket</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>mate.academy.ishop.controller.servlet.DeleteItemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/servlet/user/delete/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>complete</servlet-name>
        <servlet-class>mate.academy.ishop.controller.servlet.CompleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>complete</servlet-name>
        <url-pattern>/servlet/user/complete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>showOrders</servlet-name>
        <servlet-class>mate.academy.ishop.controller.servlet.ShowOrdersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showOrders</servlet-name>
        <url-pattern>/servlet/user/showOrders</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteOrders</servlet-name>
        <servlet-class>mate.academy.ishop.controller.servlet.DeleteOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteOrders</servlet-name>
        <url-pattern>/servlet/user/deleteorder/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>mate.academy.ishop.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>mate.academy.ishop.controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>auth_filter</filter-name>
        <filter-class>mate.academy.ishop.controller.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>auth_filter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>authorization-filter</filter-name>
        <filter-class>mate.academy.ishop.controller.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorization-filter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>mate.academy.ishop.controller.InjectorInitializer</listener-class>
    </listener>
    <listener>
        <listener-class>mate.academy.ishop.controller.MockDataInitializer</listener-class>
    </listener>
</web-app>
